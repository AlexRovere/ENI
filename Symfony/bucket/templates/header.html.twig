<div class="text-center ">
    {% for label, messages in app.flashes %}
        {% for message in messages %}
            <div class="{{ label == 'success' ? 'bg-green-500' : 'bg-red-500' }} py-4">{{ message }}</div>
        {% endfor %}
    {% endfor %}
</div>